<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TaskDetailActivity"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="230dp"
        android:background="@android:color/white"
        android:padding="70dp"
        android:text="                        Bio" />

    <ImageView
        android:id="@+id/dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/namee"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:padding="15dp"
        android:text="      Name" />

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#f8bbd0"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/edit2" />
    <ImageButton
        android:id="@+id/assoc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bio"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/icon" />
    <ImageButton
        android:id="@+id/fb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bio"
        android:layout_marginTop="30dp"
        android:layout_alignBottom="@+id/imageButton9"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:background="@drawable/background"
        app:srcCompat="@drawable/facebook" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/fb"
        android:layout_toLeftOf="@+id/edit"
        android:layout_toStartOf="@+id/edit"
        android:scaleType="fitXY"
        android:background="@drawable/background"
        app:srcCompat="@drawable/email" />

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bio">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Associates" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />
    </android.support.design.widget.TabLayout>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/namee"
        android:layout_alignEnd="@+id/dp"
        android:layout_alignRight="@+id/dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="#f8bbd0"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/add" />


</RelativeLayout>